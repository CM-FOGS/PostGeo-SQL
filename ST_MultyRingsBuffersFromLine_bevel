CREATE OR REPLACE FUNCTION ST_MultyRingsBuffersFromLine_bevel(
    geom GEOMETRY,
    radius_buffer float,
    n bigint)
RETURNS GEOMETRY AS  
$BODY$
    WITH
        tbla AS  (SELECT (ST_Dump($1)).geom),
        tblb AS (SELECT ST_Buffer(geom, radius_buffer*i, 'join=bevel') geom FROM tbla a CROSS JOIN LATERAL generate_series (1, n) AS step(i))
	SELECT ST_Polygonize(geom) geom FROM tblb;
$BODY$
LANGUAGE SQL

SELECT ST_MultyRingsBuffersFromLine_bevel(ST_Collect(geom), 1, 10) geom FROM <LINE_name_table>
