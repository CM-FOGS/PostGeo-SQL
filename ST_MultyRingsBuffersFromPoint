CREATE OR REPLACE FUNCTION ST_MultyRingsBuffersFromPoint(
    geom GEOMETRY,
    radius float,
    n bigint,
    k integer)
RETURNS GEOMETRY AS  
$BODY$
    WITH
        tbla AS (SELECT (ST_Dump($1)).geom),
        tblb AS (SELECT ST_RegularPolygonInscribedInCircle(geom, radius*i, k) geom FROM tbla a CROSS JOIN LATERAL generate_series (1, n) AS step(i))
        SELECT ST_Polygonize(geom) geom FROM tblb;
$BODY$
LANGUAGE SQL

SELECT ST_MultyRingsBuffersFromPoint(ST_Collect(geom), 1, 10, 100) geom FROM <POINT_name_table>
