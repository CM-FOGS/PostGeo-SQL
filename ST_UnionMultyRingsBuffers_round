CREATE OR REPLACE FUNCTION ST_UnionMultyRingsBuffers_round(
    geom GEOMETRY,
    radius_buffer float,
    n bigint)
RETURNS GEOMETRY AS  
$BODY$
    WITH
        tbla AS  (SELECT (ST_Dump($1)).geom),
        tblb AS (SELECT ST_Union(ST_Buffer(geom, radius_buffer*i)) geom FROM tbla a CROSS JOIN LATERAL generate_series (1, n) AS step(i) GROUP BY i)
	SELECT ST_Polygonize(geom) geom FROM tblb;
$BODY$
LANGUAGE SQL

SELECT ST_UnionMultyRingsBuffers_round(ST_Collect(geom), 15, 10) geom FROM <name_table>
